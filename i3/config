# A more modern dmenu replacement is rofi:
bindcode $mod+40 exec "rofi -modi drun,run -theme slate -show-icons -show drun"
bindsym $mod+Tab exec "rofi -modi window -theme slate -show-icons -show window"
#bindsym $mod+q exec "rofi  -show find -modi find:/home/parapsychic/.local/share/rofi -show-icons -theme solarized"
bindsym $mod+q exec "catfish"
